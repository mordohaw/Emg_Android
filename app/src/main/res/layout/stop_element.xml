<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenThemeColor"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="Nom :"
            android:textSize="18dp"
             />

            />
        <TextView
            android:id="@+id/name_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="GRENOBLE, CHAMPS-ELYSEES"
            android:textSize="18dp" />

        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/longi_label"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Longitude :"
             />

        <TextView
            android:id="@+id/longi_value"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5.7180759"
             />


        <TextView
            android:id="@+id/lati_label"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Latitude :"
            />



        <TextView
            android:id="@+id/lati_value"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="45.1927837"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line_label"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lignes :"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/line_value"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="SEM:12"
            android:textAlignment="center"
            />

    </LinearLayout>




</LinearLayout>