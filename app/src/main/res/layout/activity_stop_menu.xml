<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_background"
    tools:context="williammordohay.localisationapp.Activities.StopMenuActivity">

    <ImageButton
        android:id="@+id/previousButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="quitActivity"
        android:background="@color/greenThemeColor"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <Button
        android:id="@+id/lineButton"
        android:layout_width="@dimen/button_size_width"
        android:layout_height="@dimen/button_size_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="94dp"
        android:text="Line info"
        android:onClick="goToLineActivity"
        android:background="@drawable/green_button2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/timeButton" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="@dimen/button_size_width"
        android:layout_height="@dimen/button_size_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/green_button2"
        android:text="Time Info"
        android:onClick="goToTimeActivity"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
</RelativeLayout>
